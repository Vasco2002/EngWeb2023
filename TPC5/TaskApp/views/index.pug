extends layout

block content
  main.w3-center
    .w3-card-4
      header.w3-container.w3-light-blue
        h2 To Do List
          header
            form.w3-container.w3-center.w3-margin(action="/tasks/registo" method="POST")
              input(type='hidden' name='id' value=mT)
              label
                p.w3-2021-amethyst-orchid.w3-center.w3-round
                  b Task Description
              input.w3-input.w3-border.w3-margin-bottom.w3-center.w3-round(type='text' name='what')
              label
                p.w3-2021-amethyst-orchid.w3-round
                  b Who is responsible
              input.w3-input.w3-border.w3-margin-bottom.w3-center.w3-round(type='text' name='what')
              label
                p.w3-2021-amethyst-orchid.w3-round
                  b Who is responsible
              input.w3-input.w3-border.w3-margin-bottom.w3-center.w3-round(type='text' name='who')
              label
              p.w3-2021-amethyst-orchid.w3-round
                b DeadLine
              input.w3-input.w3-border.w3-round.w3-center(type='date' name='deadline')
            button.w3-btn.w3-round.w3-2021-amethyst-orchid.w3-margin-top(type='submit') Submit

            .w3-row.w3-border
              .w3-container.w3-half.w3-card-4.w3-margin-top.w3-light-blue
                h3 Tasks to be done
              .w3-container.w3-half.w3-card-4.w3-margin-top.w3-light-blue
                h3 Completed Tasks
              .w3-row w3-border
                .w3-container.w3-half
                each task in tasks
                  if !("done" in tasks)
                    ul.w3-ul w3-card-4
                      li
                        b Description: #{task.what}
                      li
                        b Responsible: #{task.who}
                      li
                        b DeadLine: #{task.deadline}
                      li
                        a(href='/tasks/edit/' +task.id) Edit
                        a(href='/tasks/done/' +task.id) Done
                </div>
                .w3-container.w3-half
                each task in tasks
                  if ("done" in tasks)
                    ul.w3-ul w3-card-4
                      li
                        b Description: #{task.what}
                      li
                        b Responsible: #{task.who}
                      li
                        b DeadLine: #{task.deadline}

    footer.w3-container.w3-teal
      h5 Generated by Vasco Oliveira in #{d}
    