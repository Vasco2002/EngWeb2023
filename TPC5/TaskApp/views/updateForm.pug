extends layout

block content
  main.w3-center
    .w3-card-4
      header.w3-container.w3-light-blue
        h2 To Do List
          header
            form.w3-container.w3-center.w3-margin(action="/tasks/registo" method="POST")
              input(type="hidden" name="id" value=max)
                label
                  p.w3-2021-amethyst-orchid.w3-center.w3-round
                    b Description
              input.w3-input.w3-border.w3-margin-bottom.w3-center.w3-round(type="text" name="what" value=task.what)
                 label
                  p.w3-2021-amethyst-orchid.w3-center.w3-round
                    b Responsible
              input.w3-input.w3-border.w3-margin-bottom.w3-center.w3-round(type="text" name="who" value=task.who)
                  label
                    p.w3-2021-amethyst-orchid.w3-round
                      b Deadline
              input.w3-input.w3-border.w3-round.w3-center(type="date" name="deadline" value=task.deadline)
              button.w3-btn.w3-light-blue.w3-round.w3-2021-amethyst-orchid.w3-margin-top(type="submit") Change

        footer.w3-container.w3-teal
            h5 Generated by Vasco Oliveira in #{d}



